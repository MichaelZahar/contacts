button-width = 5em

.contacts-add
  float: right
  text-align: center
  width: 32em

  h2
    width: 100%
    font-size: 3em
    margin: 0.8em 0 0.3em 0
    color: #000

.contact-form
  position: relative
  overflow: hidden

  p
    font-size: 2.5em
    margin: .8em 0.3em

  .title
    color: #999
    display: block

  .error
    margin-top: 0.3em
    color: #c00
    display: block
    font-size: 0.5em
    line-height: 1.2em

  input, select, button
    appearance: none
    transition: border-color .6s
    background: none
    border: none
    border-bottom: solid 2px #ddd
    border-radius: 0
    color: #333
    cursor: pointer
    font-family: 'Roboto Condensed', sans-serif
    font-size: 1em
    text-align: center
    outline: none

    &:focus
      border-bottom: solid 2px #333
      outline-width: 0

  input
    margin-right: 15px
    width: 100%

  select
    cursor: pointer
    display: inline-block
    font-size: .6em
    line-height: 1.8em
    margin: 0 .3em
    padding: 0 10px
    text-align-last: center

  button
    width: button-width
    border-radius: 5px
    border: solid 2px #ddd
    font-size: 1em
    padding: .2em 0
    margin: 0 .25em
    text-transform: uppercase
    transition: background-color .6s, border-color .6s

    &.close
      display: none

  .el-add,
  .el-edit
    transition: transform 0.3s

  .el-edit
    position: absolute
    top: 0

  .button-container
    display: inline-block
    position: relative
    width: button-width
    text-align: left

  &.add-form
    .el-add
      transform: scaleY(1)
      transition-delay: 0.3s

    .el-edit
      transform: scaleY(0)

  &.edit-form
    .el-add
      transform: scaleY(0)

    .el-edit
      transform: scaleY(1)
      transition-delay: 0.3s

  .add
    color: #090
    border-color: #090

    &:hover
      background-color: #e4ffe4

  .edit
    border: solid 1px #2582d2
    color: #2582d2

    &:hover
      background-color: #dff0ff

  .cancel
    border: solid 1px #a00
    color: #a00

    &:hover
      background-color: #ffdbdb

@media screen and (max-height: 415px) and (max-width: 736px) and (orientation: landscape)
  .contacts-container
    .contact-form
      font-size: 0.9em

@media screen and (max-height: 415px) and (max-width: 670px) and (orientation: landscape)
  .contacts-container
    .contacts-add
      width: 27em

      .contact-form
        font-size: 0.8em

@media screen and (max-width: 660px)
  .contacts-container
    &.hidden
      .contact-form
        max-height: 0
        transform: scaleY(0)

    &.visible
      .contact-form
        max-height: 400px
        transform: scaleY(1)

  .contacts-add
    float: none
    width: auto
    margin: 0 auto
    font-size: 0.75em

    // h2
    //   display: none

    .contact-form
      color: #fff
      transition: transform 0.5s, max-height 0.5s

    .contact-form
      .close
        display: inline-block

    select
      font-size: 0.8em
